    <script>
        function Preencher (){
        var NumSimb = Number(document.getElementById("NumSimb").value);
        
        
    
      
        for (Resultado = NumSimb; Resultado>=0;Resultado--){
            
        //if((Resultado%2)==0){
           //outResultado.textContent= "*";
            // } else{
          // outResultado.textContent= "_";
        //}

        }
        
        document.getElementById("resposta").textContent= NumSimb
    }
